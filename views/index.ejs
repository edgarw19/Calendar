<html>
<head>
	<title>My Angular App!</title>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
	<script src="/javascripts/angularApp.js"></script>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="./javascripts/jqueryKnob.min.js"></script>
</head>

<body ng-app="flapperNews">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<ui-view></ui-view>
		</div>
	</div>

	<script type="text/ng-template" id="/home.html">
	<button type="button" ng-click="test()">TEST</button>
	<button><a href='/logout'> Logout</a></button>
		<div class="page-header">
			<h1>inTouch</h1>
		</div>
		<button type="button" ng-click="grabPocket()">Pocket Test</button>
		<div ng-repeat="friend in friends | orderBy:'firstName'">
			<span style="font-size:20px; margin-left:10px;">Name:
					{{friend.firstName}} {{friend.lastName}}
			</span>
			<span>
			 	<a href="#/friends/{{friend._id}}">Details</a> 
			 	</span>
			 </div> 
			<form ng-submit="addFriend()"
			style="margin-top:30px;">
			<h3>Add a new friend!</h3>
			<div class="form-group">
				<label>Title</label>
				<input type="text"
				class="form-control"
				placeholder="First Name"
				ng-model="firstName"></input>
			</div>
			<label>Link</label>
			<div class="form-group">
				<input type="text"
				class="form-control"
				placeholder="Last Name"
				ng-model="lastName"></input>
			</div>
			<label>Email</label>
			<div class="form-group">
				<input type="text"
				class="form-control"
				placeholder="Email"
				ng-model="emailAddress"></input>
			</div>
			<label>Stay inTouch How Often? </label>
			<div class="form-group">
			<input class="form-control" type="number" min="1" max="180" ng-model="frequency" id="frequencyDisplay">Days
			</div>
			<button type="submit" class="btn btn-primary">Post</button>
		</form>
	</script>

	<script type="text/ng-template" id="/landing.html">
	<button type="button" ng-click="test()">TEST</button>
		<div class="page-header">
			<h3>Landing page
			</h3>
			<div class="container">

				<div class="jumbotron text-center">
					<h1><span class="fa fa-lock"></span> Node Authentication</h1>

					<p>Login or Register with:</p>

					<a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
<br>
					<a href="/auth/pocket" class="btn btn-danger"><span class="fa fa-google-plus"></span> Pocket</a>

				</div>
			</span>
		</div>

	</script>

	<script type="text/ng-template" id="/friends.html">
		<div class="page-header">
			<h3>
			Name: {{friend.firstName}} {{friend.lastName}}
			</h3>
			<h3>Email: {{friend.emailAddress}}</h3>
		</div>

		<div ng-repeat="note in notes | orderBy:'friend.date'">
			<span class="glyphicon glyphicon-trash"
			ng-click="deleteNote(note, $index)"></span>
			<span style="font-size:20px; margin-left:10px;">
				{{note.note}} - {{note.dateString}}
			</span>
		</div>
		<form ng-submit="addNotes()"
		style="margin-top:30px;">
		<h3 ng-click="showComment()"><a href="">Add a note</a></h3>

		<div ng-show="doComment"class="form-group">
			<input type="text"
			class="form-control"
			placeholder="Comment"
			ng-model="note"></input>
			<br>
			<button type="submit" class="btn btn-primary">Post</button>
		</div>

	</form>
</script>


<script>
    $(function() {
        $(".dial").knob({
        	'min':1,
        	'max':180,
        	change: function(value){
        		$("#frequencyDisplay").val(Math.round(value));
        		console.log(value);
        	}
        });

    });
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script src="./javascripts/bootstrap.min.js"></script>
</body>
</html>
