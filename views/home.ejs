<div class="col-md-12">
  <!--  ADD EVENT FORM -->
  <button class="btn btn--m btn--blue btn--raised" ng-click="showEventForm()" lx-ripple>Add Event</button>  
  <div class="grid" ng-show="showEvent">
    <div class="col-md-4">
      <lx-text-field label="Event Name">
      <input type="text" ng-model="eventName">
    </lx-text-field>
  </div>

  <div class="col-md-4">
    <lx-text-field label="Host Name">
    <input type="text" ng-model="eventHost">
  </lx-text-field>
</div>
<div class="col-md-10">
  <lx-text-field label="Event Description">
  <textarea type="text" class="form-control" ng-model="eventDescription"></textarea>
</lx-text-field>
</div>
<br>
<div class="col-md-4">
  <lx-date-picker label="Pick a date" model="eventDate" >Pick a date</lx-date-picker>
</div>


<div class="col-md-6">
  <lx-dropdown>
  <button class="btn btn--m btn--blue btn--raised" lx-ripple lx-dropdown-toggle>
    Category
  </button>

  <lx-dropdown-menu>
  <ul>
    <li><a class="dropdown-link" ng-click="dropdownAlert()">Notification</a></li>
    <li><a class="dropdown-link">Another action</a></li>
    <li><a class="dropdown-link">Something else here</a></li>
    <li class="dropdown-divider"></li>
    <li><span class="dropdown-link dropdown-link--is-header">Header</span></li>
    <li><a class="dropdown-link">Separated link</a></li>
  </ul>
</lx-dropdown-menu>
</lx-dropdown>
</div>
<div class="grid__col4">
  <lx-dropdown>
  <button class="btn btn--m btn--blue btn--raised" lx-ripple lx-dropdown-toggle>
    Time
  </button>

  <lx-dropdown-menu>
  <ul>
    <li><a class="dropdown-link" ng-click="dropdownAlert()">Notification</a></li>
    <li><a class="dropdown-link">Another action</a></li>
    <li><a class="dropdown-link">Something else here</a></li>
    <li class="dropdown-divider"></li>
    <li><span class="dropdown-link dropdown-link--is-header">Header</span></li>
    <li><a class="dropdown-link">Separated link</a></li>
  </ul>
</lx-dropdown-menu>
</lx-dropdown>
</div>
<div class="col-md-6">
  <button class="btn btn--m btn--green btn--raised" lx-ripple ng-click="addNewEvent()">Submit</button>  
</div>
</div>
</div>

<!-- EVENT DIALOG -->
<div class="col-md-10">
  <input type="text" class="form-control" value="09:30">

</div>

<lx-dialog class="dialog dialog--l" id="test" onclose="closingDialog()">
<div class="dialog__header">
  <div class="toolbar bgc-light-blue-500">
    <span class="toolbar__label tc-white fs-title">
      {{dialog.Title}} by {{dialog.Host}}
    </span>

  </div>
</div>

<div class="dialog__content">
  <lx-tabs links-tc="light" links-bgc="light-blue-500" indicator="yellow-500" no-divider="true" layout="inline">
  <lx-tab heading="{{dialog.Date}}">
  <div class="p">
    {{dialog.Description}}
  </div>
</lx-tab>
</lx-tabs>
</div>

<div class="dialog__actions">
  <button class="btn btn--m btn--black btn--flat" lx-ripple lx-dialog-close>Cancel</button>
</div>
</lx-dialog>

<!-- LIST OF EVENTS -->
<div class="data-table-container">
  <table class="data-table data-table--has-primary data-table--has-secondary">
    <thead>
      <tr>
        <th></th>
        <th>Event Name</th>
        <th>Date</th>
        <th>Category</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <tr class="data-table__clickable-row" ng-repeat="event in events | orderBy:'eventDate'">
        <td>
        </td>
        <td>
          <span>{{event.eventName}} </span>
        </td>
        <td>
          <span>{{event.eventDisplay}}</span>
        </td>
        <td>
          <span><button class="btn btn--s btn--orange btn--raised">Recruiting</button></span>
        </td>
        <td>
          <button class="btn btn--l btn--black btn--icon" lx-ripple ng-click="opendDialog(event)">
            <i class="mdi mdi--expand-more"></i>
          </button>

        </td>
      </tr>

      
    </tbody>
  </table>
</div>

